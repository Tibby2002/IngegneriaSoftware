<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252850">

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Aggiungi Notifica di prezzo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_chain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Chain:"
        android:textColor="#9C9DB5" />

    <Spinner
        android:id="@+id/input_chain"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_chain"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_field"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/text_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_chain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Token:"
        android:textColor="#9C9DB5" />

    <Spinner
        android:id="@+id/input_token"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_token"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_field"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/text_price_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_token"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Prezzo target:"
        android:textColor="#9C9DB5" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_price"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_price_target"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_field"
        android:inputType="numberDecimal"
        android:textColor="#000000" />

    <Button
        android:id="@+id/add_notify"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:text="AGGIUNGI"
        android:textColor="#FFFFFF" />
</RelativeLayout>
