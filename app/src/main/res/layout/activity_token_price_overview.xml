<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252850">

    <TextView
        android:id="@+id/tvTokenInformationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informazioni Generali Token"
        android:textSize="24sp"
        android:textColor="#9C9DB5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tvTokenInformationTitle"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/prezzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/name"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/varianza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/prezzo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/freccia"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="-10dp"
        android:layout_toEndOf="@+id/varianza"
        android:layout_alignBottom="@+id/varianza" />

    <ImageView
        android:id="@+id/logo_token"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/varianza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvGraphTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grafico del Prezzo annuale"
        android:textSize="24sp"
        android:textColor="#9C9DB5"
        android:layout_below="@+id/logo_token"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/tvGraphTitle"
        android:layout_marginTop="16dp" />
</RelativeLayout>
